{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BaseSite list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Observateurid</th>
                <th>Typeid</th>
                <th>Sitenom</th>
                <th>Sitecode</th>
                <th>Sitedate</th>
                <th>Sitedescription</th>
                <th>Geom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('basesite_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.observateurId }}</td>
                <td>{{ entity.typeId }}</td>
                <td>{{ entity.siteNom }}</td>
                <td>{{ entity.siteCode }}</td>
                <td>{% if entity.siteDate %}{{ entity.siteDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.siteDescription }}</td>
                <td>{{ entity.geom }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('basesite_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('basesite_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('basesite_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
